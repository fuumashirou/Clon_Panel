= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

  .logo= image_tag "logo.png"

  .row
    .large-4.large-centered.columns
      .row
        .large-4.columns
        = f.text_field :email, placeholder: "username", autofocus: true
      .row
        .large-4.columns
        = f.password_field :password, placeholder: "password"

  .row.button-div
    .small-4.small-centered.columns
      = f.submit "Entrar", class: "large button radius"

  - if devise_mapping.rememberable?
    .small-4.small-centered.columns
      .row
        .small-3.columns
          = f.check_box :remember_me, class: "right inline"
        .small-9.columns
          = f.label :remember_me, class: "right-label"

  %br
  .row.center
    .large-12.large-centered.columns
      = render "accounts/shared/links"
