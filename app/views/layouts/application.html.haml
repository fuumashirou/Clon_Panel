!!! 5
%html
  /[if lt IE 7 ] <html class=\"ie6\" lang=\"en\">
  /[if IE 7 ]    <html class=\"ie7\" lang=\"en\">
  /[if IE 8 ]    <html class=\"ie8\" lang=\"en\">
  /[if IE 9 ]    <html class=\"ie9\" lang=\"en\">
  /[if (gt IE 9)|!(IE)] <!--> <html lang=\"en\">
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :content => "IE=edge,chrome=1", :"http-equiv" => "'X-UA-Compatible" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" }
    %meta{ :name => "apple-mobile-web-app-capable", :content => "yes" }
    %meta{ :name => "application-name", :content => "Twable" }
    %title= content_for?(:title) ? yield(:title) : "Panel Twable"
    = stylesheet_link_tag :application
    = stylesheet_link_tag "/static/print", media: "print"
    = javascript_include_tag :modernizr
    = yield :head
    = csrf_meta_tag
  %body
    = render "top"
    .row
      .large-12.large-centered
        - flash.each do |name, msg|
          - if name.to_s == "alert"
            .alert-box.alert{"data-alert" => ""}
              %strong Atención!
              = msg
              = link_to "&times;".html_safe, "#", class: "close"
          - elsif name.to_s == "notice"
            .alert-box.success{"data-alert" => ""}
              %strong Atención!
              = msg
              = link_to "&times;".html_safe, "#", class: "close"
        = yield
        = audio_tag ["/static/beep.mp3", "/static/beep.ogg"], preload: "auto", id: "ordersAudio"

    = javascript_include_tag "#{@url}/socket.io/socket.io.js"
    = javascript_include_tag :application
    = yield :javascript
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-42553213-1']);
      _gaq.push(['_setDomainName', 'twable.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
